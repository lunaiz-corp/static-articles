---
const { title } = Astro.props;

import "@unocss/reset/tailwind-v4.css";
---

<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://cdn.lunaiz.com" />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />

    <link rel="icon" href="https://cdn.lunaiz.com/lunaiz_logo/icon-xl.svg" type="image/svg+xml" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable-dynamic-subset.min.css" />

    <title>{title} | lunaiz.</title>

    <style is:global>
        body {
            font-family: "Pretendard Variable", "Pretendard", sans-serif;
            line-height: 1.8rem;
            padding: 16px 32px;
        }

        h1 {
            margin: 19px 0 0 0;
            font-size: 1.8rem;
            font-weight: 800;
            line-height: 3rem;
        }

        h2 {
            margin: 15px 0 -5px 0;
            font-size: 1.5rem;
            font-weight: 800;
            line-height: 3rem;
        }

        h3 {
            margin: 20px 0 -5px 0;
            font-size: 1rem;
            font-weight: 800;
        }

        h4 {
            margin: 10px 0 15px 0;
            font-size: 1rem;
            font-weight: 800;
        }

        hr {
            border-color: #eaeaea;
            margin: 20px 0;
        }

        p {
            font-size: 1rem;
            margin: 10px 0;
        }

        a {
            color: #3b82f6;
            text-decoration: underline;
        }

        li {
            list-style: decimal;
            list-style-position: inside;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            border: 1px solid #e5e7eb;
            padding: 12px 16px;
            text-align: left;
        }

        th {
            background-color: #f9fafb;
            font-weight: 700;
        }

        tr:hover {
            background-color: #f9fafb;
        }
    </style>
</head>

<body>
    <slot />
</body>

</html>